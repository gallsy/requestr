@inherits LayoutComponentBase
@inject ThemeService ThemeService
@implements IDisposable

<div class="page" data-theme="@(_isDarkMode ? "dark" : "light")">
    <div class="sidebar p-3">
        <div class="d-flex align-items-center mb-4">
            <i class="bi bi-clipboard-data me-2"></i>
            <h5 class="mb-0">Requestr</h5>
        </div>
        
        <nav class="nav flex-column">
            <NavLink class="nav-link sidebar-nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-2"></i>
                Home
            </NavLink>
            
            <NavLink class="nav-link sidebar-nav-link" href="/forms">
                <i class="bi bi-plus-circle me-2"></i>
                New Request
            </NavLink>
            
            <NavLink class="nav-link sidebar-nav-link" href="my-requests">
                <i class="bi bi-person-lines-fill me-2"></i>
                My Requests
            </NavLink>
            
            <AuthorizeView Roles="Admin">
                <NavLink class="nav-link sidebar-nav-link" href="admin/forms">
                    <i class="bi bi-gear-fill me-2"></i>
                    Manage Forms
                </NavLink>
                <NavLink class="nav-link sidebar-nav-link" href="admin/workflows">
                    <i class="bi bi-diagram-2 me-2"></i>
                    Manage Workflows
                </NavLink>
                <NavLink class="nav-link sidebar-nav-link" href="admin/permissions">
                    <i class="bi bi-shield-lock me-2"></i>
                    Manage Permissions
                </NavLink>
                <NavLink class="nav-link sidebar-nav-link" href="admin/requests/history">
                    <i class="bi bi-clock-history me-2"></i>
                    Request History
                </NavLink>
            </AuthorizeView>
            
            <AuthorizeView Roles="Admin,FormAdmin,DataAdmin,ReferenceDataApprover">
                <NavLink class="nav-link sidebar-nav-link" href="pending-approvals">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    Pending Approvals
                </NavLink>
                <NavLink class="nav-link sidebar-nav-link" href="workflow-approvals">
                    <i class="bi bi-diagram-3 me-2"></i>
                    Workflow Approvals
                </NavLink>
            </AuthorizeView>
        </nav>
    </div>

    <main class="main">
        <div class="top-row px-4 auth">
            <div class="d-flex align-items-center">
                <ThemeToggle />
                <LoginDisplay />
            </div>
        </div>

        <article class="content px-4">
            <div class="container-fluid">
                @Body
            </div>
        </article>
    </main>
</div>

@code {
    private bool _isDarkMode;

    protected override void OnInitialized()
    {
        _isDarkMode = ThemeService.IsDarkMode;
        ThemeService.OnThemeChanged += OnThemeChanged;
    }

    private void OnThemeChanged()
    {
        _isDarkMode = ThemeService.IsDarkMode;
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= OnThemeChanged;
    }
}
