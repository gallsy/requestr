    private async Task CheckForConflictsAsync()
    {
        _hasConflicts = false;
        _conflictMessages.Clear();

        try
        {
            // Check conflicts for bulk requests
            if (IsBulkRequest && _formRequest?.BulkFormRequestId.HasValue == true)
            {
                var bulkConflictResult = await ConflictDetectionService.CheckBulkRequestConflictsAsync(_formRequest.BulkFormRequestId.Value);
                if (bulkConflictResult.HasConflicts)
                {
                    _hasConflicts = true;
                    _conflictMessages.AddRange(bulkConflictResult.ConflictMessages);
                }
            }
            // Check conflicts for individual requests
            else if (_formRequest?.Id > 0)
            {
                var conflictResult = await ConflictDetectionService.CheckForConflictsAsync(_formRequest.Id);
                if (conflictResult.HasConflicts)
                {
                    _hasConflicts = true;
                    _conflictMessages.AddRange(conflictResult.ConflictMessages);
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking for conflicts in request {RequestId}, BulkRequestId {BulkRequestId}", 
                _formRequest?.Id, _formRequest?.BulkFormRequestId);
            // Don't show conflicts if we can't check them - fail gracefully
        }
    }
