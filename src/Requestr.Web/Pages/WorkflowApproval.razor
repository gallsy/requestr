        {
            return $"/bulk-requests/{_formRequest.BulkFormRequestId.Value}";
        }
        return $"/requests/{_formRequest.Id}";
    }

    // Bulk item expand/collapse helpers
    private void ToggleBulkItem(int rowNumber)
    {
        if (_expandedBulkItems.Contains(rowNumber))
        {
            _expandedBulkItems.Remove(rowNumber);
        }
        else
        {
            _expandedBulkItems.Add(rowNumber);
        }
    }

    private void ToggleAllBulkItems()
    {
        if (_bulkFormRequest?.Items == null) return;
        
        if (_expandedBulkItems.Count == _bulkFormRequest.Items.Count)
        {
            _expandedBulkItems.Clear();
        }
        else
        {
            _expandedBulkItems = _bulkFormRequest.Items.Select(i => i.RowNumber).ToHashSet();
        }
    }

    private string GetBulkItemKeySummary(BulkFormRequestItem item)
    {
        if (_formRequest?.FormDefinition?.Fields == null) return string.Empty;
        
        // Get first 2 fields that have values to create a summary
        var keyFields = item.FieldValues
            .Where(fv => fv.Value != null && !string.IsNullOrWhiteSpace(fv.Value.ToString()))
            .Take(2)
            .Select(fv => $"{fv.Key}: {fv.Value}")
            .ToList();
        
        return string.Join(", ", keyFields);
    }

