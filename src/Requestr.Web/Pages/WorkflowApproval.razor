    // Bulk request helper methods with field configuration support
    private List<FormField> GetVisibleFieldsForBulk()
    {
        if (_formRequest?.FormDefinition?.Fields == null) return new List<FormField>();
        
        if (_fieldConfigurations.Any())
        {
            // Filter fields based on step configuration - only show visible fields
            var fields = _formRequest.FormDefinition.Fields
                .Where(field => _fieldConfigurations.Any(fc => fc.FieldName == field.Name && fc.IsVisible));

            // Also hide auto-generated columns during Insert requests
            fields = fields.Where(f => !ShouldHideFieldOnCreate(f));
            return fields.ToList();
        }
        
        // Show all fields if no configuration exists
        return _formRequest.FormDefinition.Fields
            .Where(f => !ShouldHideFieldOnCreate(f))
            .ToList();
    }

    private bool ShouldHideFieldOnCreate(FormField field)
    {
        try
        {
            if (_formRequest?.RequestType != RequestType.Insert)
                return false;
            if (_tableColumns == null || _tableColumns.Count == 0)
                return false;
            var col = _tableColumns.FirstOrDefault(c => string.Equals(c.Name, field.Name, StringComparison.OrdinalIgnoreCase));
            if (col == null) return false;
            return col.IsIdentity || col.IsComputed || col.IsRowVersion;
        }
        catch
        {
            return false;
        }
    }
    
