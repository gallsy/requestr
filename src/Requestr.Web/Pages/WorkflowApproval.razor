    private string GetDisplayValue(object? value, FormField field)
    {
        if (value == null) return "-";
        
        return field.ControlType.ToLower() switch
        {
            "date" => FormatDateValue(value),
            "checkbox" => ConvertToBoolean(value) ? "Yes" : "No",
            _ => value.ToString() ?? "-"
        };
    }
    
    private bool ConvertToBoolean(object? value)
    {
        if (value == null) return false;
        
        // Handle JsonElement specifically
        if (value is System.Text.Json.JsonElement jsonElement)
        {
            return jsonElement.ValueKind == System.Text.Json.JsonValueKind.True ||
                   (jsonElement.ValueKind == System.Text.Json.JsonValueKind.String && 
                    bool.TryParse(jsonElement.GetString(), out var boolResult) && boolResult);
        }
        
        // Handle string values
        if (value is string stringValue)
        {
            return bool.TryParse(stringValue, out var result) && result;
        }
        
        // Handle numeric values (1 = true, 0 = false)
        if (value is int intValue)
        {
            return intValue != 0;
        }
        
        // Try standard conversion as fallback
        try
        {
            return Convert.ToBoolean(value);
        }
        catch
        {
            return false;
        }
    }
    
    private string FormatDateValue(object? value)
    {
        if (value == null) return "";
        
        if (DateTime.TryParse(value.ToString(), out var date))
        {
            return date.ToString("yyyy-MM-dd");
        }
        
        return value.ToString() ?? "";
    }
    
