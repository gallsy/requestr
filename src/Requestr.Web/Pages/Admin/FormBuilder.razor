        if (cleaned.ToLower().Contains("getdate") || cleaned.ToLower().Contains("getutcdate"))
        {
            return DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
        }
        
        if (cleaned.ToLower().Contains("newid"))
        {
            return Guid.NewGuid().ToString();
        }
        
        return cleaned;
