                "number" or "range" => "0",
                "date" => DateTime.Today.ToString("yyyy-MM-dd"),
                "datetime-local" => DateTime.Now.ToString("yyyy-MM-ddTHH:mm"),
                "time" => DateTime.Now.ToString("HH:mm"),
