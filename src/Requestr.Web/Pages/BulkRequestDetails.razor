@page "/bulk-requests/{BulkRequestId:int}"
@using Requestr.Core.Models
@using Requestr.Core.Interfaces
@using System.Linq
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using BlazorBootstrap
@inject IBulkFormRequestService BulkFormRequestService
@inject IConflictDetectionService ConflictDetectionService
@inject ILogger<BulkRequestDetails> Logger
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

@inject Requestr.Web.Configuration.AppBrandingOptions Branding
<h1 class="visually-hidden">Bulk Request Details - @Branding.ApplicationName</h1>

@if (_isLoading)
{
    <LoadingSpinner Message="Loading bulk request..." />
}
else if (_bulkRequest == null)
{
    <EmptyState Title="Bulk Request Not Found" 
                Description="The requested bulk request could not be found or you don't have permission to access it.">
        <Action>
            <Button Color="ButtonColor.Primary" @onclick="@(() => Navigation.NavigateTo("/requests"))">
                Back to My Requests
            </Button>
        </Action>
    </EmptyState>
}
else
{
    <PageHeader Title="@(_bulkRequest.FormDefinition?.Name ?? "Bulk Request")" 
                Description="@($"Bulk {_bulkRequest.RequestType} Request")">
        <Actions>
            @if (_isFromApprovals)
            {
                <Button Color="ButtonColor.Secondary" Outline="true" @onclick="@(() => Navigation.NavigateTo("/approvals"))">
                    <Icon Name="IconName.ArrowLeft" class="me-2" />
                    Back to Approvals
                </Button>
            }
            else
            {
                <Button Color="ButtonColor.Secondary" Outline="true" @onclick="@(() => Navigation.NavigateTo("/requests"))">
                    <Icon Name="IconName.ArrowLeft" class="me-2" />
                    Back to Requests
                </Button>
            }
        </Actions>
    </PageHeader>

    <div class="container">
        <div class="row">
            <div class="col-12">

                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <StandardAlert AlertType="danger" 
                                 Message="@_errorMessage" />
                }

                @if (!string.IsNullOrEmpty(_conflictWarning))
                {
                    <div class="mb-4">
                        <StandardAlert AlertType="warning" 
                                     Title="Data Conflicts Detected">
                            <div style="white-space: pre-line;">@_conflictWarning</div>
                        </StandardAlert>
                    </div>
                }

                <!-- Visual Summary Card -->
                <BulkSummaryCard FormName="@(_bulkRequest.FormDefinition?.Name ?? "Unknown Form")"
                                 TableName="@(_bulkRequest.FormDefinition?.TableName ?? "")"
                                 RequestType="@_bulkRequest.RequestType"
                                 Status="@_bulkRequest.Status"
                                 TotalRows="@_bulkRequest.TotalRows"
                                 Comments="@_bulkRequest.Comments"
                                 SubmittedBy="@_bulkRequest.RequestedByName"
                                 SubmittedAt="@_bulkRequest.RequestedAt"
                                 ProcessedBy="@_bulkRequest.ApprovedByName"
                                 ProcessedAt="@_bulkRequest.ApprovedAt" />

                @if (!string.IsNullOrEmpty(_bulkRequest.RejectionReason))
                {
                    <div class="alert alert-danger mb-4">
                        <h6 class="alert-heading">
                            <i class="bi bi-x-circle me-2"></i>Rejection Reason
                        </h6>
                        <p class="mb-0">@_bulkRequest.RejectionReason</p>
                    </div>
                }

                <!-- Workflow Progress Section -->
                @if (_bulkRequest.WorkflowInstanceId.HasValue && _bulkRequest.WorkflowFormRequestId.HasValue)
                {
                    <div class="mb-4">
                        <WorkflowProgressDisplay FormRequestId="@_bulkRequest.WorkflowFormRequestId.Value" 
                                               ShowCompact="false" 
                                               AutoLoad="true" />
                    </div>
                }
                else if (_bulkRequest.WorkflowInstanceId.HasValue)
                {
                    <div class="mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bi bi-diagram-3 me-2"></i>
                                    Workflow Progress
                                </h5>
                            </div>
                            <div class="card-body">
                                <StandardAlert AlertType="warning" 
                                             Dismissable="false">
                                    This bulk request has a workflow (Instance #@_bulkRequest.WorkflowInstanceId) but the workflow FormRequest could not be found.
                                </StandardAlert>
                            </div>
                        </div>
                    </div>
                }

                <!-- Individual Items -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>
                            Individual Items (@_bulkRequest.Items.Count)
                        </h5>
                        @if (_bulkRequest.Items.Count > 0)
                        {
                            <Button Color="ButtonColor.Link" Size="ButtonSize.Small" @onclick="ToggleAllRows">
                                @if (_expandedRows.Count == _bulkRequest.Items.Count)
                                {
                                    <span>Collapse All</span>
                                }
                                else
                                {
                                    <span>Expand All</span>
                                }
                            </Button>
                        }
                    </div>
                    <div class="card-body">
                        @if (_bulkRequest.Items.Any())
                        {
                            <div class="bulk-items-list">
                                @foreach (var item in _bulkRequest.Items.OrderBy(i => i.RowNumber))
                                {
                                    var isExpanded = _expandedRows.Contains(item.RowNumber);
                                    var keyFields = GetKeyFields(item);
                                    
                                    <div class="bulk-item-row @(isExpanded ? "expanded" : "") mb-2">
                                        <div class="bulk-item-header p-3 rounded @GetItemBackgroundClass(item.Status)" 
                                             @onclick="@(() => ToggleRow(item.RowNumber))"
                                             style="cursor: pointer;">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center gap-3">
                                                    <span class="text-muted fw-bold">Row @item.RowNumber</span>
                                                    <span class="badge @GetStatusBadgeClass(item.Status)">
                                                        @item.Status
                                                    </span>
                                                    @if (!string.IsNullOrEmpty(keyFields))
                                                    {
                                                        <span class="key-fields text-muted">@keyFields</span>
                                                    }
                                                </div>
                                                <div class="d-flex align-items-center gap-2">
                                                    <span class="field-count text-muted small">
                                                        @item.FieldValues.Count field(s)
                                                    </span>
                                                    <i class="bi @(isExpanded ? "bi-chevron-up" : "bi-chevron-down")"></i>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        @if (isExpanded)
                                        {
                                            <div class="bulk-item-details p-3 border border-top-0 rounded-bottom">
                                                <div class="row">
                                                    <div class="@(_bulkRequest.RequestType == RequestType.Update || _bulkRequest.RequestType == RequestType.Delete ? "col-md-6" : "col-12")">
                                                        <h6 class="text-muted mb-2">
                                                            <i class="bi bi-pencil me-1"></i>
                                                            @(_bulkRequest.RequestType == RequestType.Insert ? "New Values" : "New Values")
                                                        </h6>
                                                        @if (item.FieldValues.Any())
                                                        {
                                                            <dl class="row mb-0">
                                                                @foreach (var field in item.FieldValues)
                                                                {
                                                                    var fieldValueStr = field.Value?.ToString();
                                                                    <dt class="col-sm-4 text-truncate" title="@field.Key">@field.Key</dt>
                                                                    <dd class="col-sm-8">
                                                                        @if (HasValueChanged(item, field.Key))
                                                                        {
                                                                            <span class="text-success fw-medium">@(string.IsNullOrEmpty(fieldValueStr) ? "(empty)" : fieldValueStr)</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            @(string.IsNullOrEmpty(fieldValueStr) ? "(empty)" : fieldValueStr)
                                                                        }
                                                                    </dd>
                                                                }
                                                            </dl>
                                                        }
                                                        else
                                                        {
                                                            <p class="text-muted mb-0">No field values</p>
                                                        }
                                                    </div>
                                                    @if (_bulkRequest.RequestType == RequestType.Update || _bulkRequest.RequestType == RequestType.Delete)
                                                    {
                                                        <div class="col-md-6">
                                                            <h6 class="text-muted mb-2">
                                                                <i class="bi bi-database me-1"></i>
                                                                Original Values
                                                            </h6>
                                                            @if (item.OriginalValues.Any())
                                                            {
                                                                <dl class="row mb-0">
                                                                    @foreach (var field in item.OriginalValues)
                                                                    {
                                                                        var origValueStr = field.Value?.ToString();
                                                                        <dt class="col-sm-4 text-truncate" title="@field.Key">@field.Key</dt>
                                                                        <dd class="col-sm-8">@(string.IsNullOrEmpty(origValueStr) ? "(empty)" : origValueStr)</dd>
                                                                    }
                                                                </dl>
                                                            }
                                                            else
                                                            {
                                                                <p class="text-muted mb-0">No original values</p>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center p-4">
                                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-2">No individual items found.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int BulkRequestId { get; set; }
    [Parameter]
    [SupplyParameterFromQuery]
    public bool IsFromApprovals { get; set; }

    private BulkFormRequest? _bulkRequest;
    private bool _isLoading = true;
    private bool _isFromApprovals;
    private string _errorMessage = "";
    private string _successMessage = "";
    private string _conflictWarning = "";
    private HashSet<int> _expandedRows = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _isLoading = true;
            _isFromApprovals = IsFromApprovals;
            
            // Load the bulk request
            _bulkRequest = await BulkFormRequestService.GetBulkFormRequestByIdAsync(BulkRequestId);
            
            if (_bulkRequest == null)
            {
                _errorMessage = "Bulk request not found.";
                return;
            }

            // Check for conflicts if the request is pending or in workflow
            if (_bulkRequest.Status == RequestStatus.Pending || _bulkRequest.WorkflowFormRequestId.HasValue)
            {
                await CheckForConflictsAsync();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading bulk request: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task CheckForConflictsAsync()
    {
        try
        {
            if (_bulkRequest?.Id > 0)
            {
                var conflictResult = await ConflictDetectionService.CheckBulkRequestConflictsAsync(_bulkRequest.Id);
                if (conflictResult.HasConflicts)
                {
                    _conflictWarning = string.Join("\n", conflictResult.ConflictMessages);
                }
            }
        }
        catch (Exception ex)
        {
            // Log the error but don't show it to the user since conflict detection is supplementary
            Logger.LogWarning(ex, "Conflict detection error for BulkRequestId {BulkRequestId}", BulkRequestId);
        }
    }

    private void ToggleRow(int rowNumber)
    {
        if (_expandedRows.Contains(rowNumber))
        {
            _expandedRows.Remove(rowNumber);
        }
        else
        {
            _expandedRows.Add(rowNumber);
        }
    }

    private void ToggleAllRows()
    {
        if (_bulkRequest == null) return;
        
        if (_expandedRows.Count == _bulkRequest.Items.Count)
        {
            _expandedRows.Clear();
        }
        else
        {
            _expandedRows = _bulkRequest.Items.Select(i => i.RowNumber).ToHashSet();
        }
    }

    private string GetKeyFields(BulkFormRequestItem item)
    {
        // Show first 2-3 key fields as a preview
        var preview = item.FieldValues.Take(3).Select(f => $"{f.Key}: {TruncateValue(f.Value?.ToString())}");
        return string.Join(" | ", preview);
    }

    private string TruncateValue(string? value, int maxLength = 20)
    {
        if (string.IsNullOrEmpty(value)) return "(empty)";
        return value.Length > maxLength ? value.Substring(0, maxLength) + "..." : value;
    }

    private bool HasValueChanged(BulkFormRequestItem item, string fieldKey)
    {
        if (_bulkRequest?.RequestType != RequestType.Update) return false;
        if (!item.OriginalValues.TryGetValue(fieldKey, out var originalValue)) return false;
        if (!item.FieldValues.TryGetValue(fieldKey, out var newValue)) return false;
        return originalValue?.ToString() != newValue?.ToString();
    }

    private string GetItemBackgroundClass(RequestStatus status) => status switch
    {
        RequestStatus.Approved => "bg-success bg-opacity-10",
        RequestStatus.Applied => "bg-primary bg-opacity-10",
        RequestStatus.Rejected => "bg-danger bg-opacity-10",
        RequestStatus.Failed => "bg-danger bg-opacity-10",
        _ => "bg-light"
    };

    private string GetStatusBadgeClass(RequestStatus status)
    {
        return status switch
        {
            RequestStatus.Pending => "bg-warning text-dark",
            RequestStatus.Approved => "bg-success",
            RequestStatus.Rejected => "bg-danger",
            RequestStatus.Applied => "bg-primary",
            RequestStatus.Failed => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetRequestTypeBadgeColor(RequestType requestType) => requestType switch
    {
        RequestType.Insert => "bg-primary",
        RequestType.Update => "bg-info",
        RequestType.Delete => "bg-danger",
        _ => "bg-secondary"
    };
}
